@model AppModelo.Services.Models.Paciente

@{
    ViewBag.Title = "Excluir Paciente";
}

<h2>Excluir Paciente</h2>
<h4>Tem certeza que deseja excluir este registro ?</h4>
<hr />

<div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CartaoSUS, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CartaoSUS, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <a href="javascript:history.go(-1)" class="btn btn-default" data-toggle="tooltip" title="Cancelar"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    <button class="btn btn-danger" type="submit" data-toggle="tooltip" title="Confirmar Exclusão"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                </div>
            </div>
        </div>
    }
</div>
