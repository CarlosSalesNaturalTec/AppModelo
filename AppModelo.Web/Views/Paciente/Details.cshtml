@model AppModelo.Services.Models.Paciente

@{
    ViewBag.Title = "Ficha de Paciente";
}

<h2>Ficha de Paciente</h2>
<hr />

<div>  
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CartaoSUS, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CartaoSUS, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <a href="javascript:history.go(-1)" class="btn btn-default" data-toggle="tooltip" title="Voltar"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a>
                <a href="@Url.Action("Edit", "Paciente", new { id = Model.Id })" class="btn btn-primary" data-toggle="tooltip" title="Alterar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            </div>
        </div>

    </div>
</div>