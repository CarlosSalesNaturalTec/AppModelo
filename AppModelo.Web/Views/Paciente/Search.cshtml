@model AppModelo.Web.Models.PacienteViewModel

@{
    ViewBag.Title = "Pesquisa";
}

<h2>Pesquisa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="input-group col-md-offset-1">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome do Paciente" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-md-offset-1">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                </span>
                @Html.EditorFor(model => model.CartaoSUS, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nº Cartão SUS" } })
                @Html.ValidationMessageFor(model => model.CartaoSUS, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-1">
                <a href="@Url.Action("SearchAll", "Paciente")" class="btn btn-default">Todos</a>
                <a href="@Url.Action("Create", "Paciente")" class="btn btn-primary">Novo</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
